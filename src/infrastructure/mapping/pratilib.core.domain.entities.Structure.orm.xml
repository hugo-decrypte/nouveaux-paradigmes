<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="pratilib\core\domain\entities\Structure" table="structure">

        <id name="id" type="guid" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="nom" type="string" column="nom" length="48" nullable="false"/>
        <field name="adresse" type="text" column="adresse" nullable="false"/>
        <field name="ville" type="string" column="ville" length="128" nullable="true"/>
        <field name="codePostal" type="string" column="code_postal" length="12" nullable="true"/>
        <field name="telephone" type="string" column="telephone" length="24" nullable="true"/>

        <one-to-many field="praticiens" target-entity="pratilib\core\domain\entities\Praticien" mapped-by="structure"/>

    </entity>
</doctrine-mapping>